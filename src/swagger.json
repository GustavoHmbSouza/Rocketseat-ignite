{
    "openapi": "3.0.0",
    "info": {
        "title": "Rocketseat Documentação",
        "description": "Api do curso da rocketseat",
        "version": "1.0.0",
        "contact": {
            "email": "gustavo.hmbsouza@gmail.com"
        }
    },
    "paths": {
        "/categorias": {
            "post": {
                "tags": [
                    "Categoria"
                ],
                "summary": "Cria categoria",
                "description": "Cria uma nova categoria",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "descricao": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "nome": "Categoria nome exemplo",
                                    "descricao": "Categoria descrição exemplo"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Criado"
                    },
                    "500": {
                        "description": "Categoria já existe "
                    }
                }
            },
            "get": {
                "tags": [
                    "Categoria"
                ],
                "summary": "Lista todas as categorias",
                "description": "Lista todas as categorias",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "nome": {
                                                "type": "string"
                                            },
                                            "descricao": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}